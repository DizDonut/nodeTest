{{#if productList}}
  <div class="selected-product">
    <div class="container" id="sel-prod"
      data-prodId="{{productList.[0].productId}}"
      data-prodDesc="{{productList.[0].description}}"
      data-prodImgURL="{{productList.[0].imageUrls.lg}}"
      data-prodPrice="{{productList.[0].pricing.price}}"
      data-prodMarketing="{{productList.[0].marketingBullets}}"
    >
      <div class="row">
        <div class="col-md-2 hero-container">
          <img class="hero-image" src="{{productList.[0].imageUrls.lg}}"
               alt="{{productList.[0].brand}} - {{productList.[0].description}}">
        </div>
        <div class="col-md-7">
          <div class="hero-description-title">

            {{productList.[0].description}}

          </div>

          <div class="hero-list-marketing">
            <ul>
              <li>{{productList.[0].marketingBullets.[0]}}</li>
              <li>{{productList.[0].marketingBullets.[1]}}</li>
              <li>{{productList.[0].marketingBullets.[2]}}</li>
            </ul>
          </div>

        </div>

        <div class="col-md-3">
          <div class="hero-price">

            ${{productList.[0].pricing.price.selling}}

          </div>

          <button class="add-to-cart">ADD TO CART</button>

        </div>
      </div>
    </div>
  </div>
{{/if}}
